<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadQrActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Your Payment QR Code"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:id="@+id/ivQrPreview"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="#E0E0E0"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_menu_camera" /> <Button
        android:id="@+id/btnSelectQr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select from Gallery"
        android:layout_marginTop="20dp"
        android:backgroundTint="#3d79ca"/>

        <Button
            android:id="@+id/btnUploadQr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save QR Code"
            android:enabled="false"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>