<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="105dp"
            android:layout_height="100dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="Lock Icon"
            android:src="@android:drawable/ic_lock_idle_lock"
            app:tint="#3d79ca" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Forgot Password"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:maxWidth="420dp"
            android:text="Please enter the email address you used to register to receive a link to reset your password."
            android:textAlignment="center"
            android:textColor="#545454"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="318dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:drawable/edit_text"
            android:hint="Input your email address"
            android:inputType="textEmailAddress"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <Button
            android:id="@+id/btn_Reset"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:backgroundTint="#3D79ca"
            android:text="Send Password Reset Link"
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp"
            android:text="Back to Login"
            android:textColor="#3d79ca"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>