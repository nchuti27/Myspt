<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:padding="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivFriendProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:shapeAppearanceOverlay="@style/CircleImageStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFriendName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/fintech_text_main"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Friend Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivFriendProfile"
        app:layout_constraintTop_toTopOf="@+id/ivFriendProfile" />

    <TextView
        android:id="@+id/tvNotiMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="You sent a friend request."
        android:textColor="@color/fintech_text_sub"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvFriendName"
        app:layout_constraintTop_toBottomOf="@+id/tvFriendName" />

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvFriendName"
        app:layout_constraintTop_toBottomOf="@+id/tvNotiMessage">

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/fintech_light_bg"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@color/fintech_text_sub"
            android:textSize="12sp"
            app:cornerRadius="18dp" />

        <Button
            android:id="@+id/btnAccept"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:backgroundTint="@color/fintech_blue"
            android:text="Accept"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:cornerRadius="18dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>